{{ ansible_managed | comment }}

#
# NanoKVM iptables rules
#

*filter
:INPUT {{ hardennanokvm_fw_default }} [0:0]
:FORWARD {{ hardennanokvm_fw_default }} [0:0]
:OUTPUT {{ hardennanokvm_fw_default }} [0:0]
-A INPUT -i lo -j ACCEPT
-A OUTPUT -o lo -j ACCEPT
-A INPUT -s 127.0.0.0/8 -j DROP
-A INPUT -i eth0 -p tcp -m tcp --dport 80 -m state --state NEW,ESTABLISHED -j ACCEPT
-A INPUT -i eth0 -p tcp -m tcp --dport 443 -m state --state NEW,ESTABLISHED -j ACCEPT
-A INPUT -i eth0 -p tcp -m tcp -s 192.168.0.0/16 --sport 22 -m state --state NEW,ESTABLISHED -j ACCEPT
-A INPUT -i eth0 -p tcp -m tcp -s 10.0.0.0/8 --sport 22 -m state --state NEW,ESTABLISHED -j ACCEPT
-A INPUT -i eth0 -p tcp -m tcp -s 192.168.0.0/16 --dport 22 -j ACCEPT
-A INPUT -i eth0 -p tcp -m tcp -s 10.0.0.0/8 --dport 22 -j ACCEPT
-A INPUT -i eth0 -p udp -m udp --dport 123 -j DROP
-A INPUT -i eth0 -p igmp -d 224.0.0.1 -j DROP
-A INPUT -i eth0 -p udp -d {{ hardennanokvm_broadcast }} --dport 137 -j DROP
-A INPUT -i eth0 -p udp -d {{ hardennanokvm_broadcast }} --dport 138 -j DROP
-A INPUT -i eth0 -p udp -s {{ hardennanokvm_network }}/{{ hardennanokvm_prefix }} -d {{ hardennanokvm_broadcast }} --dport 3517 -j DROP
-A INPUT -i eth0 -p udp -s 0.0.0.0 --sport 68 -d 255.255.255.255 --dport 67 -j ACCEPT
-A INPUT -i eth0 -p udp --sport 68 -d {{ hardennanokvm_broadcast }} --dport 67 -j ACCEPT
-A INPUT -i eth0 -p udp --sport 67 -d {{ hardennanokvm_broadcast }} --dport 68 -j ACCEPT
{% if hardennanokvm_fw_gw is defined and hardennanokvm_fw_gw | length > 0 %}
-A OUTPUT -o eth0 -p udp --sport 68 -d {{ hardennanokvm_fw_gw }} --dport 67 -j ACCEPT
{% endif %}
-A OUTPUT -o eth0 -p tcp -m tcp --sport 80 -m state --state ESTABLISHED -j ACCEPT
-A OUTPUT -o eth0 -p tcp -m tcp --sport 443 -m state --state ESTABLISHED -j ACCEPT
-A OUTPUT -o eth0 -p tcp -m tcp --dport 22 -m state --state ESTABLISHED -j ACCEPT
-A OUTPUT -o eth0 -p tcp -m tcp --sport 22 -m state --state ESTABLISHED -j ACCEPT
-A OUTPUT -o eth0 -p tcp -m tcp --sport 8000 -m state --state ESTABLISHED -j DROP
-A OUTPUT -p tcp --dport 22 -j LOG --log-prefix "iptables denied: [ssh-out] "
-A OUTPUT -p tcp -m tcp --dport 22 -j REJECT --reject-with icmp-port-unreachable
{% if hardennanokvm_fw_dnsservers is defined and hardennanokvm_fw_dnsservers %}
{%     for host in hardennanokvm_fw_dnsservers %}
-A OUTPUT -p tcp -d {{ host }} --dport 53 -j ACCEPT
-A OUTPUT -p udp -d {{ host }} --dport 53 -j ACCEPT
{%     endfor %}
{% else %}
-A OUTPUT -p tcp --dport 53 -j ACCEPT
-A OUTPUT -p udp --dport 53 -j ACCEPT
{% endif %}
-A OUTPUT -p udp --dport 123 -j ACCEPT
## ICMP
-A INPUT -p icmp -m icmp --icmp-type 8 -m conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
-A OUTPUT -p icmp -m icmp --icmp-type 0 -m conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type 0 -m conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
-A OUTPUT -p icmp -m icmp --icmp-type 8 -m conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
-A OUTPUT -p icmp -m icmp --icmp-type 3 -m conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type 3 -s {{ hardennanokvm_network }}/{{ hardennanokvm_prefix }} -j ACCEPT
-A FORWARD -p icmp --icmp-type 0 -m conntrack --ctstate NEW,RELATED,ESTABLISHED -j ACCEPT
-A FORWARD -p icmp --icmp-type 8 -m conntrack --ctstate NEW,RELATED,ESTABLISHED -j ACCEPT
-A OUTPUT -p tcp --dport 25 -j DROP
-A OUTPUT -p tcp --dport 587 -j DROP
{% if hardennanokvm_fw_systemupdates_allow | bool %}
# System updates? chetietupian.top, cdn.vansfans.cn, cdn.sipeed.com
-A OUTPUT -o eth0 -p tcp -m tcp -d 148.153.188.147 --dport 443 -j ACCEPT
{% endif %}
{% if hardennanokvm_fw_https_out_allow | bool %}
-A OUTPUT -o eth0 -p tcp -m tcp --dport 443 -j LOG --log-prefix "iptables: [https-out] "
-A OUTPUT -o eth0 -p tcp -m tcp --dport 443 -j ACCEPT
{% endif %}
-A INPUT -j LOG --log-prefix "iptables: [NOMATCH] " --log-level 7
-A OUTPUT -j LOG --log-prefix "iptables: [NOMATCH] " --log-level 7
COMMIT
