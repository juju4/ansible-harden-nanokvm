{{ ansible_managed | comment }}

#
# NanoKVM /etc/network/interfaces
#

# interface file auto-generated by buildroot

auto lo
iface lo inet loopback
{% if not hardennanokvm_dhcp_enable | bool %}

auto eth0
iface eth0 inet static
  address {{ hardennanokvm_net_ip }}
  netmask {{ hardennanokvm_netmask }}
  broadcast {{ hardennanokvm_broadcast }}
{%     if hardennanokvm_gw is defined and hardennanokvm_gw | length > 0 %}
  gateway {{ hardennanokvm_gw }}
{%     endif %}
{% endif %}
